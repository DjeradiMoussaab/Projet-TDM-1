<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity" android:background="@drawable/bcg">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:textColor="@color/black"
            android:textSize="24sp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:textSize="14sp"
            android:textColor="@color/black" android:hint=" Nom et prénom" android:textColorHint="@color/black"
            android:background="@drawable/text_field" android:paddingLeft="40dp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textColor="@color/black" android:hint="E-mail" android:textColorHint="@color/black"
            android:background="@drawable/text_field" android:paddingLeft="40dp"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textColor="@color/black" android:hint="Téléphone" android:textColorHint="@color/black"
            android:background="@drawable/text_field" android:paddingLeft="40dp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textColor="@color/black" android:hint="Mot de passe" android:textColorHint="@color/black"
            android:background="@drawable/text_field" android:paddingLeft="40dp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4" android:background="@android:color/holo_blue_light"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_profile"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintTop_toTopOf="@+id/editText"
            app:layout_constraintBottom_toBottomOf="@+id/editText" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_email"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/editText2"
            app:layout_constraintBottom_toBottomOf="@+id/editText2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/editText2" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_phone"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/editText3" app:layout_constraintStart_toStartOf="@+id/editText3"
            app:layout_constraintBottom_toBottomOf="@+id/editText3" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_lock"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/editText4"
            app:layout_constraintBottom_toBottomOf="@+id/editText4"
            app:layout_constraintStart_toStartOf="@+id/editText4" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>